<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: 'Inicio - Macramé Rose'}) %>
<body>
    <%- include('partials/header') %>
    <section id="banner">
        <!--<img src="/img/banner-almohadones-2.jpg" alt="banner-almohadones">-->
        <!--image slider start-->
        <div class="slider">
            <div class="slides">
            <!--radio buttons start-->
            <input type="radio" name="radio-btn" id="radio1">
            <input type="radio" name="radio-btn" id="radio2">
            <input type="radio" name="radio-btn" id="radio3">
            <input type="radio" name="radio-btn" id="radio4">
            <!--radio buttons end-->
            <!--slide images start-->
            <div class="slide first">
                <img src="/img/banner-hilos.jpg" alt="">
            </div>
            <div class="slide">
                <img src="/img/banner-almohadones-2.jpg" alt="">
            </div>
            <div class="slide">
                <img src="/img/banner-portamacetas-6.jpg" alt="">
            </div>
            <div class="slide text-banner">
                <img src="/img/banner-portamacetas-7.jpg" alt="">
                <h2 class="subtitle">Hilos de la mejor calidad!</h2>
            </div>
            <!--slide images end-->
            <!--automatic navigation start-->
            <div class="navigation-auto">
                <div class="auto-btn1"></div>
                <div class="auto-btn2"></div>
                <div class="auto-btn3"></div>
                <div class="auto-btn4"></div>
            </div>
            <!--automatic navigation end-->
        </div>
        <!--manual navigation start-->
        <div class="navigation-manual">
          <label for="radio1" class="manual-btn"></label>
          <label for="radio2" class="manual-btn"></label>
          <label for="radio3" class="manual-btn"></label>
          <label for="radio4" class="manual-btn"></label>
        </div>
        <!--manual navigation end-->
        </div>
        <!--image slider end-->
        <script type="text/javascript">
        var counter = 1;
        setInterval(function(){
            document.getElementById('radio' + counter).checked = true;
            counter++;
            if(counter > 4){
                counter = 1;
            }
        }, 5000);
        </script>
    </section>
    <main id="main">
        <section id="categories">
            <h3>PRINCIPALES CATEGORÍAS</h3>
            <div id="box-categories">
                <% categories.forEach(category => { %>
                    <article class="product-category">
                        <img src="/img/products/<%= category.image %>" alt="<%= category.name %>" class="img-width">
                        <a href="/categories/<%= category.id %> "><h4><%= category.name.toUpperCase() %></h4></a>
                    </article>
                <% }) %>
                
            </div>
        </section>
        <section id="featured-products">
            <h3>PRODUCTOS DESTACADOS</h3>

            <div id="box-products">

                <% featured.forEach(product => { 
                    let finalPrice = product.price - (product.price * product.discount / 100); 
                    %>
                    <article class="article-product">
                        <a href="/products/detail/<%= product.id %>">
                            <img src="/img/products/<%= product.image %> " alt="<%= product.name %>" class="img-width">
                                
                            <div id="description-product">
                                <i class="fas fa-truck"></i>
                                <h4 class="name-product"><%= product.name %></h4>
                                <p class="price hidden-product">$<%= toThousand(finalPrice.toFixed(0)) %> </p>
                                <% if(product.discount > 0) { %>
                                    <p class="discount hidden-product"><%= product.discount %>% off</p>
                                <% } %>
                            </div>
                        </a>
                    </article>
                <% }) %>

            </div>
            <h3>OFERTAS</h3>
            <div id="box-products">
                <% inSale.forEach(product => { 
                    let finalPrice = product.price - (product.price * product.discount / 100); 
                    %>
                    <article class="article-product">
                        <a href="/products/detail/<%= product.id %>">
                            <img src="/img/products/<%= product.image %> " alt="<%= product.name %>" class="img-width">
                                
                            <div id="description-product">
                                <i class="fas fa-truck"></i>
                                <h4 class="name-product"><%= product.name %></h4>
                                <p class="price hidden-product">$<%= toThousand(finalPrice.toFixed(0)) %> </p>
                                <p class="discount hidden-product"><%= product.discount %>% off</p>
                                
                            </div>
                        </a>
                    </article>
                <% }) %>
            </div>
            

            <div class="div-allproducts">
                <a href="/products"> VER TODOS LOS PRODUCTOS</a>
            </div>

        </section>     
                
        <hr>
        <%- include('partials/infoShop') %>
    </main>
    <%- include('partials/footer') %>
</body>

</html>